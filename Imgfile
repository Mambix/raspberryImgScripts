FROM 2018-10-09-raspbian-stretch-lite

INFLATE 128

APT build-essential
APT cmake git libgtk2.0-dev pkg-config libavcodec-dev libavformat-dev libswscale-dev
APT libtbb2 libtbb-dev libjpeg-dev libpng-dev libtiff-dev libjasper-dev libdc1394-22-dev
APT python-dev python-numpy python3-dev python3-numpy 

# Install OpenCV library
RUN mkdir -p /home/pi/Source
RUN cd /home/pi/Source

RUN git clone https://github.com/opencv/opencv.git
RUN git clone https://github.com/opencv/opencv_contrib.git

RUN cd opencv
RUN mkdir build
RUN cd build

RUN cmake -D CMAKE_BUILD_TYPE=Release -D CMAKE_INSTALL_PREFIX=/usr/local ..
RUN make -j4
RUN sudo make install
